# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/accounting_db

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Accounting for Dummies API
VERSION=1.0.0
DESCRIPTION=A comprehensive accounting management system

# Cloud Service Providers
RESEND_API_KEY=
RESEND_FROM_EMAIL="Accounting App <no-reply@example.com>"

# Frontend base URL for email links
FRONTEND_BASE_URL=http://localhost:3000

# Email token expiration (hours)
EMAIL_VERIFICATION_EXPIRE_HOURS=48
PASSWORD_RESET_EXPIRE_HOURS=4